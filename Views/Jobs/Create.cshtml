@model JobPosting.Models.Job

@{
    ViewData["Title"] = "Create Job";
}

<h1>Create Job</h1>

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EmployerId" class="control-label"></label>
        <select asp-for="EmployerId"
                asp-items="ViewBag.Employers"
                class="form-control">
            <option value="">-- Select Employer --</option>
        </select>
        <span asp-validation-for="EmployerId" class="text-danger"></span>
    </div>

    <!-- No ApplicantJobs input here -->

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}